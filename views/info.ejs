            filmData.link = filmData.name;
            filmData.name = filmData.name.replace("_", " ");
            filmData.name = filmData.name.replace("_", " ");
            filmData.name = filmData.name.replace("_", " ");
            filmData.name = filmData.name.replace("_", " ");
            filmData.name = filmData.name.replace("_", " ");
            film = new Vue({
                el: '#filmData',
                data: {
                    filmData
                }
            })
        })
        if (window.location.hash) {
            socket.emit('getFilm', window.location.hash);
        }
    </script>

</body>

</html>